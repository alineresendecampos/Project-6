
 {{#if locationsLength}}
    {{#each locationsMap}} 
    <tr>
        {{!-- <td><a href="/movie/{{this.id}}"><img src="https://image.tmdb.org/t/p/w185/{{this.poster_path}}" alt="Poster Image"></a></td> --}}
        <td><a href="/location/{{_id}}">{{name}}</a></td>
        <td>{{description}}</td>
        <td>{{comments}}</td>
        <td>{{likes}}</td>
        
        {{#if isValidated}} 
            <td>Approved</td> 
        {{else}}
            <td>
                <a href="/approve/{{_id}}"><button class="btn btn-success">Approve</button></a>
                <a href="/reject/{{_id}}"><button class="btn btn-success">Reject</button></a>
            </td>
        {{/if}}
    </tr>
    {{/each}}
{{else}}
    <tr>
        <td colspan="5">No valid locations !!</td>
    </tr>
{{/if}}