<div class="container" style="margin-top: 30px">

    <ul class="nav justify-content-end">
        <li class="nav-item">
            <a class="nav-link" href="/"> üìç</a>
        </li>
        <li class="nav-item">
            {{#if user_active}}
            <a class="nav-link" href="/logout">Logout</a>
            {{else}}
            <a class="nav-link" href="/login">Login</a>
            {{/if}}
        </li>
    </ul>

</div>

<div class="row justify-content-md-center bg-light mb-3" style="margin-top: 10px">
    <div class="col-md-6" style="margin-top: 70px">
        <h1>üéí User profile</h1>
        <p><b>Name: </b>{{firstName}}</p>
        <p><b>Surname: </b>{{lastName}}</p>
        <p><b>Email: </b> {{email}}</p>
        <button id="edit" type="edit" class="btn btn-primary">Edit profile</button>

    </div>

    <div class="col-md-4" style="margin-top: 50px">
        {{#if message}}
        <div class="alert {{messageClass}}" role="alert">
            {{message}}
        </div>
        {{/if}}
        {{!-- <div class="col-md-6"> --}}
        <form id="show" action="POST" action="/userprofile">
            <div class="form-group">
                <label for="firstName">Name:</label>
                <input name="firstName" type="text" class="form-control" id="firstName"
                    placeholder="Update your name...">
            </div>
            <div class="form-group">
                <label for="lastName">Last Name:</label>
                <input name="lastName" type="text" class="form-control" id="lastName"
                    placeholder="Update your last name...">
            </div>
            <div class="form-group">
                <label for="email">Email address:</label>
                <input name="email" type="email" class="form-control" id="email" placeholder="Update your email.."
                    title="Please use this detail as your userid to login!">
            </div>
            <div class="form-group">
                <label for="password">Password:</label>
                <input name="password" type="password" class="form-control" id="password" required
                    title="Must contain at least one number and one uppercase and lowercase letter, and at least 6 or more characters"
                    placeholder="Password...">
            </div>
            <div class="form-group">
                <label for="password">Confirm password:</label>
                <input name="password" type="password" class="form-control" id="password" required
                    title="Must contain at least one number and one uppercase and lowercase letter, and at least 6 or more characters"
                    placeholder="Confirm password...">
            </div>
            <button type="update" class="btn btn-primary">Update</button>
        </form>
    </div>
</div>